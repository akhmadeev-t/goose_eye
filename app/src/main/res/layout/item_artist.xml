<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/artist_image"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_artist"
        android:layout_width="@dimen/artist_image"
        android:layout_height="@dimen/artist_image"
        android:scaleType="centerCrop"
        android:src="@drawable/mark_ruffalo"
        app:shapeAppearance="@style/shape_image_artist" />

    <TextView
        android:id="@+id/tv_artist_info"
        style="@style/artist_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/mark_ruffalo" />

</LinearLayout>