<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <TextView
        android:id="@+id/tv_movies_list"
        style="@style/white_14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_4x"
        android:layout_marginTop="@dimen/dimen_14x"
        android:drawablePadding="@dimen/dimen_2x"
        android:fontFamily="sans-serif-black"
        android:text="@string/movies_list"
        app:drawableLeftCompat="@drawable/ic_combined_shape"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_movies_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dimen_3x"
        android:layout_marginTop="@dimen/dimen_8x"
        android:layout_marginEnd="@dimen/dimen_3x"
        android:layout_marginBottom="@dimen/dimen_3x"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_movies_list" />

</androidx.constraintlayout.widget.ConstraintLayout>